{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es6"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "rootDirs": [
      "src"
    ],
    "typeRoots": ["node_modules/@types", "./@types"]
  },
  "include": [
    "src"
  ]
}